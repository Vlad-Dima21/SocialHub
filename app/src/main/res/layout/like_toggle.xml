<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_shape"
    android:stateListAnimator="@animator/elevation_animator">

<TextView
    android:id="@+id/toggle_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_to_favorites"
    android:textSize="14sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="@dimen/card_spacing"
    />

<ToggleButton
    android:id="@+id/toggle_btn"
    android:layout_width="18dp"
    android:layout_height="18dp"
    android:background="@drawable/btn_like_selector"
    android:textOn=""
    android:textOff=""
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@+id/toggle_text"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="@dimen/card_spacing"
    />

</androidx.constraintlayout.widget.ConstraintLayout>